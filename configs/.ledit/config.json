{
  "use_spaces": true,
  "theme": "tokyo-night",
  "auto_reload": true,
  "vim_mode": true,
  "font_size": 30,
  "enable_accents": false,
  "auto_open_cmd_output": true,
  "relative_line_numbers": true,
  "tab_width": 2,
  "highlight_active_line": "small",
  "save_before_command": true,
  "commands": {
    "fmt": "clang-format -i $file_path",
    "fmt-js": "prettier -w $file_path",
    "fmt-sql": "sql-formatter --fix -l postgresql $file_path",
    "cc": "clang++ -O0 -g -o $file_parent/$file_basename $file_path",
    "cc-fast": "clang++ -O3 -o $file_parent/$file_basename $file_path",
    "aoc-test": "clang++ -O0 -std=c++17 -g -o $file_parent/$file_basename $file_path && $file_parent/$file_basename $file_parent/in.txt",
    "aoc-full": "clang++ -O3 -std=c++17 -o $file_parent/$file_basename $file_path && $file_parent/$file_basename input.txt",
    "node": "node $file_path",
    "bun": "bun $file_path",
    "bd": "bd $file_path",
    "py": "python3 $file_path",
    "spellcheck": "spellchecker $file_path",
    "dictu": "dictu $file_path"
  },
  "window_transparency": false,
  "font_face": "/home/liz3/.local/share/fonts/ttf/MapleMono/MapleMono-Regular.ttf",
  "extra_fonts": [
    "/usr/share/fonts/noto/NotoColorEmoji.ttf"
  ]
}
